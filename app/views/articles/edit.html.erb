<h1>Editing your Article List</h1>
<h3>Edit for: <h2 class="confirm"><%= @todo.chore %></h2></h3>

<form action="/articles/<%= @todo.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <textarea type="text" name="chore" placeholder="Updated todo text"></textarea>
  <input type="submit" value="update">
</form>